<h1><%= @product.name %></h1>
<p><%= @product.formatted_price %></p>
<p><%= @product.description %></p>
<p>Created by <%= @product.user.name %></p>

<% if session[:user_id] == @product.user_id %>
<p><%= link_to "Edit product", edit_product_path(@product) %></p>
<% end %>

<% if current_user %>
  <h3>Reviews</h3>
  <% @product.reviews.each do |review| %>
  <p>
    <%= review.comment %>
    <% if review.user != nil %><br />
      <em> by <%= review.user.name %></em>
      Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>


  <h4>Give your own review!</h4>
  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error explanation">
        <h2><% pluralize(@review.errors.count, "error") %> prohibited this view form being saved:</h2>
        <ul>
          <% @review.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
        </ul>
    <% end %>

    <div class="field"></div>
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

  <% else %>
    <p>Please <%= link_to 'log in', new_session_path %> to add a review or edit this product.</p>
  <% end %>