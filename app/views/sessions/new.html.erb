<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= text_field_tag :password %>
  </div>
  <div>
    <%= label_tag :password_confirmation %>
    <%= text_field_tag :password_confirmation %>
  </div>
  <div class="actions"><%= submit_tag "Log in" %></div>
<%end%>